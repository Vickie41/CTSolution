@model CTSolution.Models.PurchaseImportDetail

<h1>Add Purchase Import Details</h1>

<form asp-action="Create">
    @Html.HiddenFor(model => model.TransactionID, new { Value = Model.TransactionID ?? DateTime.Now.ToString("yyyyMMddHHmmssfff") })
    <div class="form-group">
        <label asp-for="GoodsServicesName"></label>
        <input asp-for="GoodsServicesName" class="form-control" />
        <span asp-validation-for="GoodsServicesName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UnitType"></label>
        <input asp-for="UnitType" class="form-control" />
        <span asp-validation-for="UnitType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Qty"></label>
        <input asp-for="Qty" class="form-control" type="number" />
        <span asp-validation-for="Qty" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImportValue"></label>
        <input asp-for="ImportValue" class="form-control"  />
        <span asp-validation-for="ImportValue" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ValueOnLand"></label>
        <input asp-for="ValueOnLand" class="form-control" />
        <span asp-validation-for="ValueOnLand" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TaxRate"></label>
        <input asp-for="TaxRate" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="TaxRate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TaxAmt"></label>
        <input asp-for="TaxAmt" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="TaxAmt" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Note"></label>
        <textarea asp-for="Note" class="form-control"></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Details</button>
</form>
