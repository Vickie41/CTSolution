@model IEnumerable<CTSolution.Models.PurchaseImportDetail>

@{
    ViewData["Title"] = "Purchase Import Details";
}

<h1>Purchase Import Details</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.First().GoodsServicesName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().UnitType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Qty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ImportValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ValueOnLand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().TaxRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().TaxAmt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Note)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
                <td>
                    @Html.DisplayFor(modelItem => item.GoodsServicesName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Qty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImportValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValueOnLand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaxRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaxAmt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    
                    <a href="@Url.Action("Edit", "PurchaseImportDetail", new { id = item.PurchaseImportDetailPkid })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "PurchaseImportDetail", new { id = item.PurchaseImportDetailPkid })" class="btn btn-danger btn-sm">Delete</a>
                    <a href="@Url.Action("Detail", "PurchaseImportDetail", new { id = item.PurchaseImportDetailPkid })" class="btn btn-danger btn-sm">Detail</a>
                </td>
            </tr>
        }
    </tbody>
</table>
