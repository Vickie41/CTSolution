@model CTSolution.Models.PurchaseTransaction

<h1>Delete Purchase Transaction</h1>

<h4>Are you sure you want to delete this?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">
        Transaction ID
    </dt>
    <dd class="col-sm-10">
        @Model.TransactionID
    </dd>
    <dt class="col-sm-2">
        Chalen No
    </dt>
    <dd class="col-sm-10">
        @Model.ChalenNo
    </dd>
    <dt class="col-sm-2">
        Tax Amount
    </dt>
    <dd class="col-sm-10">
        @Model.TaxAmt
    </dd>
    <dt class="col-sm-2">
        Paid Amount
    </dt>
    <dd class="col-sm-10">
        @Model.PaidAmt
    </dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="TransactionID" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index">Back to List</a>
</form>
