<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tax Credit System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CTSolution.styles.css" asp-append-version="true" />
    <style>
        body {
            font-size: .875rem;
            background-color: #f0f4f8; /* Soft light background */
            color: #333;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 100;
            width: 220px;
            background-color: #ffffff; /* Clean white background */
            color: #333;
            padding: 20px;
            border-right: 1px solid #ddd; /* Light border for separation */
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        }

            .sidebar h4 {
                font-size: 1.25rem;
                margin-bottom: 20px;
                color: #5b5b5b; /* Soft gray */
            }

            .sidebar a {
                color: #333;
                text-decoration: none;
                display: block;
                padding: 10px;
                border-radius: 5px; /* Rounded corners */
                transition: background-color 0.3s ease;
            }

                .sidebar a:hover {
                    background-color: #e7f1ff; /* Light blue hover effect */
                }

        .main-content {
            margin-left: 220px;
            padding: 20px;
            transition: margin-left 0.3s ease;
        }

        .footer {
            padding: 20px 0;
            width: 100%;
            background-color: #ffffff; /* Clean white background */
            color: #5b5b5b; /* Soft gray */
            border-top: 1px solid #ddd; /* Light border for separation */
            text-align: center;
            position: relative;
        }

            .footer a {
                color: #007bff; /* Calming blue */
            }

                .footer a:hover {
                    color: #0056b3; /* Darker blue for hover effect */
                }
    </style>
    @RenderSection("Styles", required: false) <!-- This allows custom styles in individual views -->
</head>
<body>
    <div class="sidebar">
        <h4>Tax Credit System</h4>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="TaxPayerInfo" asp-action="Index">Tax Payer Info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="PurchaseImportMaster" asp-action="Index">Import Master</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="PurchaseImportDetail" asp-action="Index">Import Detail</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="PurchaseTransaction" asp-action="Index">Purchase Transaction</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="PurchaseTransaction" asp-action="LastCompletedTransaction">Completed Transactions</a>
            </li>
        </ul>
    </div>
    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-center">
        <div class="container">
            &copy; 2024 - CTSolution - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
